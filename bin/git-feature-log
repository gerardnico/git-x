#!/bin/bash
# Delete a feature branch


set -Eeuo pipefail

# Bash lib library path detection
if [ "${GITURE_BASH_LIB_PATH:-}" == "" ]; then
  if command -v "brew" > /dev/null 2>&1; then
    GITURE_BASH_LIB_PATH="$(brew --prefix giture)/lib"
  else
    echo "error: GITURE_BASH_LIB_PATH is not set and a brew installation was not found"
    exit 1
  fi
fi

# shellcheck source=../..//bash-lib/lib/bashlib-error.sh
source "${GITURE_BASH_LIB_PATH}/bashlib-error.sh"
error::set_trap
# shellcheck source=../..//bash-lib/lib/bashlib-doc.sh
source "${GITURE_BASH_LIB_PATH}/bashlib-doc.sh"
# shellcheck source=../..//bash-lib/lib/bashlib-string.sh
source "${GITURE_BASH_LIB_PATH}/bashlib-command.sh"
# shellcheck source=../..//bash-lib/lib/bashlib-git.sh
source "${GITURE_BASH_LIB_PATH}/bashlib-git.sh"

function synopsis(){

  cat <<EOF
Shows the logs of commit in the feature branch (until the common ancestor with the default branch)
\`\`\`bash
$(basename "$0")
\`\`\`
EOF

}

# Doc Synopsis
if [ "${1:-}" = "synopsis" ]; then
  synopsis
  exit 0
fi

# Help
if [[ "${1:-}" =~ -h|--help|help ]]; then
  doc::help synopsis
  exit 0
fi



BRANCH_NAME=$(git::get_current_branch)
DEFAULT_BRANCH=$(git::get_default_branch)
if [[ "$BRANCH_NAME" == "$DEFAULT_BRANCH" ]]; then
  echo::error "Nothing to show, it's the default branch ($DEFAULT_BRANCH)"
  exit 1
fi

echo::info "Logs:"
HASH="%C(always,yellow)%h%C(always,reset)"
RELATIVE_TIME="%C(always,green)%ar%C(always,reset)"
AUTHOR="%C(always,bold blue)%an%C(always,reset)"
REFS="%C(always,red)%d%C(always,reset)"
SUBJECT="%s"
FORMAT="$HASH $RELATIVE_TIME{$AUTHOR{$REFS $SUBJECT"

pretty_git_logs() {
  # in git log, branch name value could be also HEAD as we are on the branch
  git log --graph --pretty="tformat:$FORMAT" "$@" |
  column -t -s '{' |
  less -XRS --quit-if-one-screen
}
pretty_git_logs "$DEFAULT_BRANCH..$BRANCH_NAME"
echo::success "Done"
